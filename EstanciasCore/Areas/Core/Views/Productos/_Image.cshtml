@using Commons.HtmlHelpers
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.Rendering
@model DAL.DTOs.ProductoAdjuntosDTO
@{
    ViewData["Title"] = "Cargar Foto del Producto";
}

<form asp-action="_Image" enctype="multipart/form-data">
    <div class="form-group" style="text-align-last: center;">
        <label for="imagenes">Seleccionar Imágenes</label>
        <input type="file" id="imagenes" name="FotoProducto" multiple class="form-control-file">
        <input asp-for="ProductoId" value="@Model.ProductoId" class="form-control" type="hidden">
    </div>
    <button type="submit" class="btn btn-primary pull-right">Cargar Imágenes</button>
    <br />
    <hr />
</form>

@if (Model.ProductoAdjuntos.Count()>0)
{
    <h2 style="text-align-last: center;">Miniaturas de Imágenes Cargadas</h2>
    <br />
    <div class="row">
        @foreach (var imagen in Model.ProductoAdjuntos)
        {
            <div class="col-md-3" id="imagenDiv_@(imagen.Id)">
                <div class="thumbnail">
                    <img src="data:image;base64,@(Convert.ToBase64String(imagen.Foto))" alt="@imagen.Nombre" style="height:110px;width:110px" />
                    <button onclick="EliminarFoto(@imagen.Id)" class="btn btn-danger pull-right" style="width:110px;">Eliminar</button>
                </div>
            </div>
        }
    </div>
}
    

<script>
        let ShowSuccess = (mensaje) => {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: mensaje,
                showConfirmButton: false,
                timer: 1500
            })
        }

        let ShowError = (mensaje) => {
            Swal.fire({
                position: 'top-end',
                icon: 'error',
                title: mensaje,
                showConfirmButton: false,
                timer: 1500
            })
        }

        let EliminarFoto = (id) => {
            fetch("/Core/Productos/EliminarFotoProducto?Id=" + id)
                .then(response => {
                    if (!response.ok) {
                        ShowError(response.status)
                    }
                    return response.json();
                })
                .then(data => {
                    ShowSuccess("La foto se borro correctamente.")
                    $("#imagenDiv_" + id).remove();
                })
                .catch(error => {
                    ShowError("Error al borrar la foto.")
                });
        }
   
    
</script>
















